{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    // "declarationDir": "types",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "outDir": "lib"
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*.ts"],
  "compileOnSave": false,
  "buildOnSave": false
}
